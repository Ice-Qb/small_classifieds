- provide(:title, "Edit user")
%h1 Update your profile
.row
  .span6.offset3
    = simple_form_for(@user, :html => {:class => 'form-vertical' }) do |f|
      = f.input :name
      = f.input :email
      = f.input :password
      = f.input :password_confirmation, label: 'Confirm Password'
      = f.button :submit, 'Save changes', class: "btn btn-large btn-primary"





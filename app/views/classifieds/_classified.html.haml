%li
  %span= link_to classified.title, classified
  - if signed_in?
    - if current_user.admin?
      | #{link_to "edit", edit_classified_path(classified.id) }
      | #{link_to "delete", classified, method: :delete, data: { confirm: "You sure?" }}  
  %br
  %span.content
    = classified.content
  %span
    = succeed " " do 
      %span.other_content email:  
    =classified.email_address
  %br
  %span
    = succeed " " do 
      %span.other_content city:  
    =classified.city
  %br
  %span
    = succeed " " do 
      %span.other_content address:  
    =classified.address
  %br
  %span.timestamp
    Created #{time_ago_in_words(classified.created_at)} ago.
  